{
  "env": {
    "browser": true,
    "es2021": true
  },
  "plugins": ["import"],
  "extends": [
    "eslint:recommended",
    "plugin:import/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "import/extensions": [
      "error",
      "always"
    ],
    "curly": "off",
    "semi": ["error", "never"],
    "quotes": ["error", "single"],
    "no-unsafe-optional-chaining": "off",
    "no-console": "warn",
    "no-eq-null": "warn",
    "no-case-declarations": "off"
  }
}
